                "options": {}
            },
            "name": "Webhook Supabase",
            "type": "n8n-nodes-base.webhook",
            "typeVersion": 1,
            "position": [
                250,
                300
            ]
        },
        {
            "parameters": {
                "conditions": {
                    "number": [
                        {
                            "field1": "={{$json.body.record.stock}}",
                            "operation": "smallerEqual",
